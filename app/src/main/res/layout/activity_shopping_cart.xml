<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShoppingCartActivity"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <LinearLayout
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center"
        >

        <RadioGroup
            android:id="@+id/radio_months"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/three_radio"
                android:text="3 Meses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/six_radio"
                android:text="6 Meses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/nine_radio"
                android:text="9 Meses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/twelve_radio"
                android:text="12 Meses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_weight=".8"
        android:id="@+id/recyclerview_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/cart_viewholder"
        />

<LinearLayout
    android:layout_weight=".1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@color/colorAccent"
    >


    <TextView
        android:layout_marginStart="@dimen/fab_icon_size"
        android:layout_weight=".6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: "
        />

    <TextView
        android:id="@+id/textview_alltotal_cart"
        android:layout_weight=".2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="total"
        />

    <Button
        android:layout_weight=".2"
        android:text="Comprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/alert"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        />

</LinearLayout>
</LinearLayout>
</android.support.design.widget.CoordinatorLayout>