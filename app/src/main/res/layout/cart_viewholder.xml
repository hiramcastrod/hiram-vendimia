<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/list_padding"
        android:gravity="center"
        >

    <ImageView
        android:id="@+id/cart_icon"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/textView_model_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Modelo"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/textView_description_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:paddingRight="2dp"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/textView_price_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textColor="@color/colorAccent"
                android:textSize="10dp"
                android:paddingRight="@dimen/fab_icon_size"
                />
            <TextView
            android:text="Cantidad: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            />
            <TextView
                android:id="@+id/textview_quantitiy_cart"
                android:text="quiantity"
                android:textSize="10dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/fab_icon_size"
                />
            <TextView
                android:text="Importe: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/textview_import_cart"
                android:text="quantity"
                android:textSize="10dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>